----------------code--------------


void str1(string& str,int i,int j){
    if(i>j)
        return ;
        swap(str[i++],str[j--]);
    str1(str,i,j);
}


string reverseString(string str)
{
    str1(str,0,str.length()-1);
	// Write your code here.
    return str;
}
