-------------------code--------------------


int linear_Search(int arr[],int n,int key){
    if(n<0)
        return -1;
    if(arr[n]==key)
        return n;
    else
        return linear_Search(arr,n-1,key);
    return -1;
}



int linearSearch(int *arr, int n, int x)
{
    //Write your code here
    int ans=linear_Search(arr,n,x);
    return ans;
    
}
